%h1 Listing lists
%table
  %tr
    %th Name
    %th Description
    %th Visibility
    %th
    %th
    %th
  - @lists.each do |list|
    %tr
      %td= list.name
      %td= list.description
      %td= list.visibility
      %td= link_to 'Show', list
      %td= link_to 'Edit', edit_list_path(list)
      %td= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }
