.list-row.container
  %div
    - unless combo.execution.nil?
      %a.main-link{"data-end-time" => combo.execution.end_time.to_s, "data-start-time" => combo.execution.start_time.to_s, "data-target" => "#watch-combo-modal", "data-toggle" => "modal", "data-video-id" => combo.execution.get_video_id, :href => "#"}
        %span.combo-sequence
          = combo.sequence
          %i.fa.fa-youtube-play
    - else
      %span.combo-sequence.no-link= combo.sequence
    %span.actions.pull-right
      - @combo = combo
      - if current_tricker_can_edit_combo
        = link_to "", edit_combo_path(combo), :class => "fa fa-cog btn btn-xs btn-camouflaged"
        = link_to "", combo, method: :delete, data: { confirm: 'Are you sure?' }, :class => "fa fa-trash-o btn btn-xs btn-camouflaged"
  .clearfix
  %div
    %small
      = combo.no_tricks
      \-trick combo Â·
      by #{link_to combo.tricker.name, combo.tricker}
      %span.pull-right
        = time_ago_in_words(combo.updated_at)
        ago
